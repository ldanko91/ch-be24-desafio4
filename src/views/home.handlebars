<h1>Lista de productos</h1>
<section id="productos">
<div>
{{#if limitProds}}
    {{#each limitProds}}
        <div>
        <h2>{{this.title}}</h2>
        <h3>${{this.price}}</h3>
        <ul>
            <li>ID:{{this.id}}</li>
            <li>{{this.description}}</li>
            <li>Código:{{this.code}}</li>
            <li>Stock:{{this.stock}}</li>
        </ul>
        </div>
    {{/each}}

{{else}}
    {{#each productos}}
        <div>
        <h2>{{this.title}}</h2>
        <h3>${{this.price}}</h3>
        <ul>
            <li>ID:{{this.id}}</li>
            <li>{{this.description}}</li>
            <li>Código:{{this.code}}</li>
            <li>Stock:{{this.stock}}</li>
        </ul>
        </div>
    {{/each}}
{{/if}}
</div>
</section>